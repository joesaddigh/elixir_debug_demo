{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "mix_task",
      "name": "mix dbg.run",
      "request": "launch",
      "projectDir": "${workspaceFolder}",
      "task": "dbg.run",
      "env": { "MIX_ENV": "dev" },
      "taskArgs": ["5"]
    },
    {
      "type": "mix_task",
      "name": "mix test (all)",
      "request": "launch",
      "projectDir": "${workspaceFolder}",
      "task": "test",
      "taskArgs": ["--trace"],
      "requireFiles": [
        "test/**/test_helper.exs",
        "test/**/*_test.exs"
      ]
    }
  ]
}
